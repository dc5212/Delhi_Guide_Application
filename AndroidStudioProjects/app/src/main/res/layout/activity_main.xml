<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/places"
        style="@style/CategoryStyle"
        android:background="@color/category_numbers"
        android:text="Places To Visit" />

    <TextView
        android:id="@+id/food"
        style="@style/CategoryStyle"
        android:background="@color/category_family"
        android:text="Famous Street Food" />

    <TextView
        android:id="@+id/shop"
        style="@style/CategoryStyle"
        android:background="@color/category_colors"
        android:text="Shopping Places" />
    <TextView
        android:id="@+id/worship"
        style="@style/CategoryStyle"
        android:background="@color/category_worr"
        android:text="Worship Places" />

    <TextView
        android:id="@+id/info"
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:text="Information Of Delhi Metro" />
    <TextView
    android:id="@+id/infor"
    style="@style/CategoryStyle"
    android:background="#a4c639"
    android:text="Normal Information " />

</LinearLayout>
    </ScrollView>

